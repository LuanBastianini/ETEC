<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/Style.css" rel="stylesheet" />
    
    <script src="~/Scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="~/Content/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/js/jquery.maskedinput.js" type="text/javascript"></script>

    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/Content/img/BuscouAchou.png" />
</head>
<body>
    <nav class="navbar navbar-inverse" style=" background-color: rgba(255, 152, 0, 0.55); border:none; border-radius:0">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <div style="padding-top:8px; float: right;" id="formnav">
                    <button id="btnent" type="button" class="btn btn-warning">Entrar</button>
                    <button id="btncad" type="button" class="btn btn-warning">Cadastrar</button>
                </div>
                <div id="btnSnav" class="navbar-right" style="margin:8px 0; display:none;">
                    <button id="btnMeusdados" type="button" class="btn btn-danger">Meus Dados</button>
                    <button id="btncadrec" type="button" class="btn btn-danger">Cadastrar Receitas</button>
                    <button id="btnMrec" type="button" class="btn btn-danger">Minhas Receitas</button>
                    <button id="btnsair" type="button" class="btn btn-danger">Sair</button>
                </div>
            </div>
        </div>
    </nav>
    @RenderBody()
</body>
</html>
