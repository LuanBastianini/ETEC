@{
    ViewBag.Title = "BUSCAR - BuscouAchouReceitas";
}
<style>
    .logoImg {
        width: 346px;
        height: 200px;
    }

    .cont-logo {
        margin-top: 150px;
        margin-bottom: 10px;
        padding: 0;
        
    }

    #Busca {
        width: 500px;
        height: 30px;
        margin: 0;
        margin-left: 40px;
    }
    #Busca:focus {
        border-color:#F58634;
        box-shadow: inset 0 1px 1px rgba(0,0,0,0.075),0 0 8px #F58634;
    }

    .btn {
        height: 40px;
    }

    #contlogin {
         width:200px;
         height:200px;
         box-shadow: inset 0 1px 1px rgba(0,0,0,0.075),0 0 8px #F58634;
    }

    .dadosLogin {
        margin-left:10px;
    }

    .inpdados {
        width: 150px;
    }

</style>

<div class="forlogin" style="display:none; position:absolute;width:100%;">
        <div class="row-fluid" style="margin-top:5px;" >
            <div class=" offset9 span2" style=" padding-left:100px;">
                <div id="contlogin">
                    <form action="/" method="post">
                        <fieldset>
                            <legend style="text-align:center">Login <i style="margin-left:90px; cursor:pointer;" class="icon-remove remove"></i></legend>
                            <div class="dadosLogin">
                                <input autofocus type="text" placeholder="NomeID" class="inpdados" />
                            </div>
                            <div class ="dadosLogin">
                                <input type="text" placeholder="Senha" class="inpdados"  />
                            </div>
                            <div class ="dadosLogin">
                                <button type="submit" class="btn btn-warning" style="height:30px">Logar</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
    </div>
</div>
<div class="container-fluid cont-logo">
    <div class="row-fluid">
        <div class="span4 offset4" style="padding-left:30px;">
            <img class="logoImg" src="~/Content/img/BAReceitas.jpg">
        </div>
    </div>
</div>
<div class="container-fluid cont-busca">
    <div class="row-fluid">
        <div class="span6 offset3" >
            <form class="form-search">
                <div class="input-append" >                
                    <input autofocus type="text" id="Busca" placeholder="Encontre sua receita...">
                    <button type="submit" class="btn btn-warning btn" style="border-radius:0 4px 4px 0;">Buscar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal hide fade"  id="modalcad" style="display:none">
</div>
<script type="text/javascript">
   
    $('#btncad').click(function () {
        $.get("@Url.Action("Entrar", "Home")").success(function (data) {
            $('#modalcad').html(data);
            $('#modalcad').modal('show');
        }).error(function () {
            console.log("ERRO");
        });
    });
    $('#btnent').click(function () {
        $('.forlogin').slideDown();
    });

    $('.remove').click(function () {
        $(this).closest("div.forlogin").slideUp();
    });



</script>



