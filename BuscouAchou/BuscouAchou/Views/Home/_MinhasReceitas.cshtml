@model List<BuscouAchou.Domain.DataModels.ReceitasCadastradasDataModel>
@{
    Layout = null;
}

<div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3 style="border-left:5px solid orange">Minhas Receitas</h3>
        </div>
        <div class="row">
            <div class="col-md-12" style="margin:0 0 20px 0;">
                <div class="modal-body">
                    <div>
                        <table class="table table-hover">
                            @if (Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td data-numrec="@item.Num_SeqlReceitas">@item.Nom_Receita</td>
                                        <td onclick="alteraRec()"><i title="Alterar" style="cursor:pointer; color:blue;" class="glyphicon glyphicon-edit "></i></td>
                                        <td><i title="Remover" style="cursor:pointer; color:red;" class="glyphicon glyphicon-remove "></i></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td>Nenhuma Receita Encontrada</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>