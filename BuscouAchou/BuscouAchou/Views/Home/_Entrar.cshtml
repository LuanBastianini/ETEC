    Layout = null;
}



    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>CADASTRE-SE</h3>
    </div>
<div class="row-fluid">
    <div class="span6" style="border-right:2px solid black; margin:20px 0;">
        <div class="modal-body">
            <form action="/" method="post">
                <div>
                    <input autofocus type="text" placeholder="Nome">
                </div>
                <div>
                    <input autofocus type="text" placeholder="E-mail">
                </div>
                <div>
                    <input autofocus type="password" placeholder="Senha">
                </div>
                <div>
                    <input autofocus type="password" placeholder="Confirma Senha">
                </div>
                <div>
                    <button type="submit" class="btn btn-warning btn">Cadastrar</button>
                </div>
            </form>

        </div>
    </div>
    <div class="span6" style="margin:20px 0">
